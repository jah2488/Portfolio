%h1 Dashboard

#stats
  %h1 Stats
  #posts
    %div
      %span.title= "You have #{pluralize(@posts.count, "Post")}"
      = link_to "Create New Post", new_post_path, :class => "create right btn clearfix"
      %hr.clearfix
    - @posts.each do |post|
      .post.row-item
        = link_to post.title, edit_post_path(post)
        = link_to "Delete", {:action => :destroy, :controller => :posts, :id => post }, :confirm => "Delete the post?", :method => :delete, :class => "delete right btn"
        = link_to "Delete", post_path(post), :confirm => "Are you sure?", :method=>:delete

  %hr
  #projects
    %div
      %span.title= "You have #{pluralize(@projects.count, "Project")}"
      = link_to "Create New Project", new_project_path, :class => "create right btn clearfix"
      %hr.clearfix
    - @projects.each do |project|
      .project.row-item
        = link_to project.title, edit_project_path(project)
        = link_to "Delete", project, :confirm => "Delete the post?", :method => :delete, :class => "delete right btn"
