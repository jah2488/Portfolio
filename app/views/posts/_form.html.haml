= form_for @post do |f|
  -if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :category
    = f.text_field :category
  .field
    = f.label :type
    = f.select :type, ["post", "picture", "video", "quote"]
  .field
    = f.label :notes
    = f.text_area :notes
  .actions
    = f.submit 'Save'
