%section#project
  %article#show{ :class => @project.deployed }
    %header
      #div
        = image_tag @project.screenshot.url(:large)
      %h1= link_to @project.title, @project
      %p= link_to @project.url, @project.url
      %p= markdown( @project.description )
    .body
      %h3 Misc Notes and Details
      %p= @project.notes
      %p= "Language: #{@project.language}"
      %p= "Platform: #{@project.platform}"
      %p= "Currently Deployed: #{@project.deployed}"
    .language= @project.language
    .platform= @project.platform

  = if current_user
    = link_to 'Edit', edit_project_path(@project)
    \|
    = link_to 'Back', projects_path
